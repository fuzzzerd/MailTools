<Window x:Class="MailTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:MailTools.Views"
        Title="Mail tools" Height="500" Width="525">
    <Grid Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="185" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        
        <views:SettingsView 
            Grid.Row="0" 
            Grid.Column="1" DataContext="{Binding SettingsVM}" />
        
        <Grid
            Grid.Row="0" 
            Grid.Column="0"
            Margin="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="20" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
           
            <TextBlock Margin="2" Grid.Row="0" Text="Log" />
            <ListBox Margin="2" Grid.Row ="1" DataContext="{Binding Log}" />
            
        </Grid>
        
        <views:MessageView 
            Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
            DataContext="{Binding MessageVM}" />
    </Grid>
</Window>
